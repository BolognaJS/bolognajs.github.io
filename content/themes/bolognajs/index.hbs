<h1 class="header">Ultimi Eventi</h1>

{{#foreach posts}}
    <div class="event">
        <h3>
            <a href="{{url}}">{{{title}}}</a><br/>
            <small>
                <time datetime="{{date format="YYYY-MM-DD"}}">{{date format='DD MMM YYYY'}}</time>
            </small>
        </h3>

        <div class="row">
            <div class="col-md-12">
                {{excerpt}}
            </div>
        </div>
    </div>
{{/foreach}}

